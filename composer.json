{
    "name": "algorit/synchronizer",
    "description": "PHP api/database synchronizer",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Koerich",
            "email": "gabrielmk@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/database": "~4.2",
        "illuminate/container": "~4.2",
        "illuminate/support": "~4.2",
        "illuminate/console": "~4.2",
        "illuminate/config": "~4.2",
        "illuminate/filesystem": "~4.2",
        "illuminate/log": "~4.2",
        "nesbot/carbon": "1.*",
        "rmccue/requests": ">=1.0",
        "nategood/httpful": "*",
        "stil/curl-easy": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "mockery/mockery": "dev-master",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/migrations",
            "tests"
        ],
        "psr-0": {
            "Requests": "library/"
        },
        "psr-4": {
            "Algorit\\Synchronizer\\": "src/Algorit/Synchronizer"
        }
    },
    "minimum-stability": "stable"
}
